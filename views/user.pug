doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='stylesheets/custom.css')
  // Bootstrap CSS
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
  title Profile
body.homebody
  nav.navbar.navbar-expand-lg.navbar-light.border-bottom(style="background-color: rgb(77, 77, 78); color: white;")
    .container-fluid
      a.navbar-brand(href='/home')
        img(style='width: 50px;' src='/images/logo-bms.png')
      a.navbar-brand(href='/home' style="color: white;")
        h2 AskBMS
      button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav.ms-auto(style='width: max-content;')
          li.nav-item
            a.nav-link.active(aria-current='page' href='/home' style="color: white;") Home
          li.nav-item.dropdown
            a#navbarDropdown.nav-link.dropdown-toggle(style="color: white;" href='#' role='button' data-bs-toggle='dropdown' aria-expanded='false')
              | User Name
            ul.dropdown-menu(aria-labelledby='navbarDropdown')
              li
                a.dropdown-item(href='/u/UserName') Profile
              li
                a.dropdown-item(href='#') Notifications
              li
                hr.dropdown-divider
              li
                a.dropdown-item(href='/') Log Out
          //
            <li class="nav-item">
            <a class="nav-link disabled">Disabled</a>
            </li>
        //
          <form class="d-flex">
          <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success" type="submit">Search</button>
          </form>

  .container-fluid(style="display: flex;height: 180px;")
      img(src='/images/avatar.jpg' style='width: 160px; height: 160px; border-radius: 80px;margin: 20px')
      .col(style='margin: auto; height: max-content;') 
          h2 #{name}
          p joined on 12/12/2021
      .ms-auto.row
          .col.border-dark(style='margin: auto; height: max-content; width: 300px;border-left: 1px solid black;')
              p(style='margin: auto; width: max-content;') Department Details 
              h2(style='margin: auto; ') Computer Science 
          .col.border-left(style='margin: auto; height: max-content;border-left: 1px solid black;')
              p(style='margin: auto; width: max-content;') User Details 
              h5(style='margin: auto; width: max-content;') Student 
              h2(style='margin: auto; width: max-content;') 2nd Year
              h5(style='margin: auto; width: max-content;') Btech
  hr.me-4.ms-4


  <ul class="nav nav-tabs" style="margin: 10px;" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="true">Questions Asked</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">Questions Answered</button>
    </li>
  </ul>
  <div class="tab-content" style="margin: 10px;" id="myTabContent">
    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab" ></div>
    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab" ></div>
  </div>

